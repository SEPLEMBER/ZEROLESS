<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основная тема -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/matte_black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/neon_accent</item>
        <item name="colorPrimaryVariant">@color/neon_accent</item>
        <item name="colorOnPrimary">@color/text_green</item>
        <item name="colorSecondary">@color/neon_cyan</item>
        <item name="colorSecondaryVariant">@color/neon_cyan</item>
        <item name="colorOnSecondary">@color/matte_black</item>
    </style>

    <!-- Для splash -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/matte_black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Для экрана установки -->
    <style name="SetupTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/matte_black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Для настроек -->
    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/matte_black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
