<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A">

    <!-- Центр: поле с welcome/dots/error — располагаем над клавиатурой, делаем более адаптивным -->
    <LinearLayout
        android:id="@+id/centerColumn"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите PIN-код"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:visibility="visible"
            android:layout_marginBottom="24dp"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:shadowColor="#66000000"
            android:maxLines="1"
            android:ellipsize="end"/>

        <LinearLayout
            android:id="@+id/dots"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/d1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="°"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:background="#333333"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/d2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="°"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:background="#333333"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/d3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="°"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:background="#333333"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/d4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="°"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:background="#333333"/>
        </LinearLayout>

        <TextView
            android:id="@+id/errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Неверный код"
            android:textSize="16sp"
            android:textColor="#FF5252"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Клавиатура: используем TableLayout, с захардкоженными серыми цветами кнопок -->
    <TableLayout
        android:id="@+id/keypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:padding="16dp">

        <TableRow>
            <Button android:id="@+id/btn1" android:layout_width="80dp" android:layout_height="80dp" android:text="1" android:textSize="24sp" android:background="#808080" android:textColor="#FFFFFF" android:layout_margin="8dp"/>
            <Button android:id="@+id/btn2" android:layout_width="80dp" android:layout_height="80dp" android:text="2" android:textSize="24sp" android:background="#808080" android:textColor="#FFFFFF" android:layout_margin="8dp"/>
            <Button android:id="@+id/btn3" android:layout_width="80dp" android:layout_height="80dp" android:text="3" android:textSize="24sp" android:background="#808080" android:textColor="#FFFFFF" android:layout_margin="8dp"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btn4" android:layout_width="80dp" android:layout_height="80dp" android:text="4" android:textSize="24sp" android:background="#808080" android:textColor="#FFFFFF" android:layout_margin="8dp"/>
            <Button android:id="@+id/btn5" android:layout_width="80dp" android:layout_height="80dp" android:text="5" android:textSize="24sp" android:background="#808080" android:textColor="#FFFFFF" android:layout_margin="8dp"/>
            <Button android:id="@+id/btn6" android:layout_width="80dp" android:layout_height="80dp" android:text="6" android:textSize="24sp" android:background="#808080" android:textColor="#FFFFFF" android:layout_margin="8dp"/>
        </TableRow>

        <TableRow>
            <Button android:id="@+id/btn7" android:layout_width="80dp" android:layout_height="80dp" android:text="7" android:textSize="24sp" android:background="#808080" android:textColor="#FFFFFF" android:layout_margin="8dp"/>
            <Button android:id="@+id/btn8" android:layout_width="80dp" android:layout_height="80dp" android:text="8" android:textSize="24sp" android:background="#808080" android:textColor="#FFFFFF" android:layout_margin="8dp"/>
            <Button android:id="@+id/btn9" android:layout_width="80dp" android:layout_height="80dp" android:text="9" android:textSize="24sp" android:background="#808080" android:textColor="#FFFFFF" android:layout_margin="8dp"/>
        </TableRow>

        <TableRow>
            <!-- пустая ячейка для выравнивания -->
            <View android:layout_width="80dp" android:layout_height="80dp" android:layout_margin="8dp"/>
            <Button android:id="@+id/btn0" android:layout_width="80dp" android:layout_height="80dp" android:text="0" android:textSize="24sp" android:background="#808080" android:textColor="#FFFFFF" android:layout_margin="8dp"/>
            <Button android:id="@+id/btnDelete" android:layout_width="80dp" android:layout_height="80dp" android:text="⌫" android:textSize="24sp" android:background="#808080" android:textColor="#FFFFFF" android:layout_margin="8dp"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
