<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mascot_racky_background"
    android:padding="12dp">

    <!-- Аватарка маскота -->
    <ImageView
        android:id="@+id/mascot_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Mascot Icon"
        android:layout_marginBottom="8dp" />

    <!-- Область отображения чата -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/chatMessagesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" >
            <!-- сообщения будут добавляться динамически сюда -->
        </LinearLayout>
    </ScrollView>

    <!-- Поле ввода с автодополнением -->
    <AutoCompleteTextView
        android:id="@+id/queryInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Напиши сообщение..."
        android:textColor="@color/mascot_racky_text"
        android:textColorHint="@color/mascot_racky_text"
        android:background="@color/card_dark"
        android:padding="8dp"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:scrollbars="vertical" />

    <!-- Кнопка отправки -->
    <Button
        android:id="@+id/sendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:textColor="@color/mascot_racky_text"
        android:background="@color/button_transparent"
        android:layout_marginTop="8dp" />

    <!-- Кнопка очистки чата -->
    <Button
        android:id="@+id/clearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Очистить чат"
        android:textColor="@color/mascot_racky_text"
        android:background="@color/button_transparent"
        android:layout_marginTop="8dp" />

</LinearLayout>
