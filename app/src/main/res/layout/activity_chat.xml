<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_black"
    android:padding="8dp">

    <!-- Top matte bar: large mascot image left + icons right (no title) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@color/card_dark">

        <ImageView
            android:id="@+id/mascot_top_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="Mascot"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_lock"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Lock"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />

        <ImageButton
            android:id="@+id/btn_trash"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Trash"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />

        <ImageButton
            android:id="@+id/btn_envelope_top"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Envelope"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <!-- Chat area background slightly lighter than page -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/chat_area_bg"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/chatMessagesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Input row: text + envelope (send) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:background="@color/input_bg"
        android:padding="8dp">

        <AutoCompleteTextView
            android:id="@+id/queryInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Напиши сообщение..."
            android:textColor="@color/mascot_racky_text"
            android:textColorHint="@color/mascot_racky_text"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:scrollbars="vertical" />

        <ImageButton
            android:id="@+id/envelope_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />
    </LinearLayout>

</LinearLayout>
