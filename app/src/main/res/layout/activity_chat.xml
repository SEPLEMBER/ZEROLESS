<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/matte_black"
    android:padding="8dp">

    <!-- Верхняя панель: батарея, время, меню -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@color/card_dark">

        <!-- Батарея -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|start">

            <ImageView
                android:id="@+id/battery_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/battery" />

            <TextView
                android:id="@+id/battery_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--%"
                android:textColor="@color/neon_cyan"
                android:textSize="14sp"
                android:layout_marginStart="6dp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Время -->
        <TextView
            android:id="@+id/time_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="--:--"
            android:textColor="@color/neon_cyan"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="monospace" />

        <!-- Кнопка-меню -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end">

            <ImageButton
    android:id="@+id/btn_overflow"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:src="@android:drawable/ic_menu_more"
    android:contentDescription="@string/menu"
    android:scaleType="centerInside" />


            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_more"
                android:contentDescription="@string/menu"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>

    <!-- Чат -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/chat_area_bg"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/chatMessagesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Индикатор загрузки -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Поле ввода + кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/input_bg">

        <AutoCompleteTextView
            android:id="@+id/queryInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_message"
            android:textColor="@color/mascot_racky_text"
            android:textColorHint="@color/mascot_racky_text"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:popupBackground="@color/popup_bg" />

        <ImageButton
            android:id="@+id/envelope_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/send"
            android:src="@android:drawable/ic_menu_send"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btn_lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_lock_lock"
            android:contentDescription="@string/lock" />

        <ImageButton
            android:id="@+id/btn_trash"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="@string/clear_chat" />

        <ImageButton
            android:id="@+id/btn_envelope_top"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="@string/send" />
    </LinearLayout>

</LinearLayout>
