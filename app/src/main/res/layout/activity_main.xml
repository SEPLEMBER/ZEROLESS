<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black_background"
    android:layoutDirection="locale">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Input Section -->
        <TextView
            android:id="@+id/inputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_label"
            android:textColor="@color/text_color"
            android:textDirection="locale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/input_hint"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/olive_accent"
            android:textDirection="locale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLabel"
            android:layout_marginTop="8dp" />

        <!-- Password Section -->
        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_label"
            android:textColor="@color/text_color"
            android:textDirection="locale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputEditText"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/passwordDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color"
            android:textDirection="locale"
            app:layout_constraintStart_toEndOf="@id/passwordLabel"
            app:layout_constraintTop_toTopOf="@id/passwordLabel"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/olive_accent"
            android:textDirection="locale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordLabel"
            android:layout_marginTop="8dp" />

        <!-- Text Operations -->
        <Button
            android:id="@+id/encryptTextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/encrypt_button"
            android:onClick="performTextEncryption"
            android:backgroundTint="@color/olive_accent"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/decryptTextButton"
            app:layout_constraintTop_toBottomOf="@id/passwordEditText"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/decryptTextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/decrypt_button"
            android:onClick="performTextDecryption"
            android:backgroundTint="@color/olive_accent"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toEndOf="@id/encryptTextButton"
            app:layout_constraintEnd_toStartOf="@id/pasteTextButton"
            app:layout_constraintTop_toTopOf="@id/encryptTextButton"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/pasteTextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/paste_button"
            android:onClick="pasteInput"
            android:backgroundTint="@color/olive_accent"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toEndOf="@id/decryptTextButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/encryptTextButton"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginStart="8dp" />

        <!-- File and Copy Operations -->
        <Button
            android:id="@+id/copyTextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/copy_button"
            android:onClick="copyToClipboard"
            android:backgroundTint="@color/olive_accent"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pickFileButton"
            app:layout_constraintTop_toBottomOf="@id/encryptTextButton"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/pickFileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pick_file_button"
            android:onClick="pickFile"
            android:backgroundTint="@color/olive_accent"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toEndOf="@id/copyTextButton"
            app:layout_constraintEnd_toStartOf="@id/encryptFileButton"
            app:layout_constraintTop_toTopOf="@id/copyTextButton"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/encryptFileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/encrypt_file_button"
            android:onClick="performFileEncryption"
            android:backgroundTint="@color/olive_accent"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toEndOf="@id/pickFileButton"
            app:layout_constraintEnd_toStartOf="@id/decryptFileButton"
            app:layout_constraintTop_toTopOf="@id/copyTextButton"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/decryptFileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/decrypt_file_button"
            android:onClick="performFileDecryption"
            android:backgroundTint="@color/olive_accent"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toEndOf="@id/encryptFileButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/copyTextButton"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginStart="8dp" />

        <!-- Other Buttons -->
        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_button"
            android:onClick="clearInput"
            android:backgroundTint="@color/olive_accent"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/copyTextButton"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/exit_button"
            android:onClick="exitWithObfuscation"
            android:backgroundTint="@color/olive_accent"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toEndOf="@id/clearButton"
            app:layout_constraintTop_toTopOf="@id/clearButton"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_button"
            android:onClick="showInfo"
            android:backgroundTint="@color/olive_accent"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toEndOf="@id/exitButton"
            app:layout_constraintTop_toTopOf="@id/clearButton"
            android:layout_marginStart="8dp" />

        <!-- Output Section -->
        <TextView
            android:id="@+id/outputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/output_label"
            android:textColor="@color/text_color"
            android:textDirection="locale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clearButton"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/outputTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/output_hint"
            android:minLines="4"
            android:maxLines="10"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:scrollbars="vertical"
            android:visibility="invisible"
            android:textColor="@color/text_color"
            android:textDirection="locale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/outputLabel"
            android:layout_marginTop="8dp" />

        <ProgressBar
            android:id="@+id/textEncryptProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/outputTextView"
            app:layout_constraintEnd_toEndOf="@id/outputTextView"
            app:layout_constraintTop_toTopOf="@id/outputTextView"
            app:layout_constraintBottom_toBottomOf="@id/outputTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
