<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textColor="@color/text_green"
            android:textSize="20sp"
            android:layout_marginBottom="12dp" />

        <!-- Кнопка выбора папки на SD -->
        <Button
            android:id="@+id/selectFolderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать папку на SD"
            android:textColor="@color/text_green"
            android:background="@color/button_transparent"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/templatesInput"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:hint="@string/templates_hint"
            android:textColor="@color/text_green"
            android:textColorHint="#809F809F"
            android:background="@color/card_dark"
            android:padding="8dp" />

        <Button
            android:id="@+id/saveTemplatesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_templates"
            android:textColor="@color/text_green"
            android:background="@color/button_transparent"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/clearTemplatesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Очистить шаблоны"
            android:textColor="@color/text_green"
            android:background="@color/button_transparent"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/text_green"
            android:background="@color/button_transparent"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
