<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matte_black">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/disableScreenshotsSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disable_screenshots"
        android:textColor="@color/neon_cyan"
        android:textSize="16sp"
        app:thumbTint="@color/neon_accent"
        app:trackTint="@color/neon_cyan"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- NEW: password input and save button row (below switch, above other buttons) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_passkey"
        app:boxStrokeColor="@color/neon_pink"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/disableScreenshotsSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/savePassButton">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/savePassButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text=">"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:strokeColor="@color/neon_pink"
        app:strokeWidth="2dp"
        app:backgroundTint="@color/matte_black"
        app:cornerRadius="8dp"
        app:rippleColor="@color/neon_cyan"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/passwordInputLayout"
        app:layout_constraintBottom_toBottomOf="@id/passwordInputLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectFolderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_folder"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:strokeColor="@color/neon_pink"
        app:strokeWidth="2dp"
        app:backgroundTint="@color/matte_black"
        app:cornerRadius="8dp"
        app:rippleColor="@color/neon_cyan"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/passwordInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- NEW: Setup button placed between selectFolderButton and backButton -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/setupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setupfold"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:strokeColor="#FF073A"
        app:strokeWidth="2dp"
        app:backgroundTint="@color/matte_black"
        app:cornerRadius="8dp"
        app:rippleColor="@color/neon_cyan"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/selectFolderButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:strokeColor="@color/neon_blue"
        app:strokeWidth="2dp"
        app:backgroundTint="@color/matte_black"
        app:cornerRadius="8dp"
        app:rippleColor="@color/neon_cyan"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/setupButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
